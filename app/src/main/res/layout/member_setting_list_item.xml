<?xml version="1.0" encoding="utf-8"?>
<com.topunion.chili.wight.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_name"
        android:textColor="#666666"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:gravity="left"/>


    <ImageView
        android:id="@+id/img_choose"
        android:src="@mipmap/select_ture"
        android:visibility="gone"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</com.topunion.chili.wight.CheckableRelativeLayout>
