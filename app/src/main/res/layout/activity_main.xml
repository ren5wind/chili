<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context="com.topunion.chili.MainActivity">

    <com.yinglan.alphatabs.AlphaTabsIndicator
        android:id="@+id/alphaIndicator"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"

            app:paddingTexwithIcon="5dp"
            app:tabIconNormal="@mipmap/find"
            app:tabIconSelected="@mipmap/find_select"
            app:tabText="发现"
            app:tabTextSize="12sp"
            app:textColorNormal="@color/textGray"
            app:textColorSelected="@color/main" />

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"

            app:paddingTexwithIcon="5dp"
            app:tabIconNormal="@mipmap/bid"
            app:tabIconSelected="@mipmap/bid_select"
            app:tabText="投标"
            app:tabTextSize="12sp"
            app:textColorNormal="@color/textGray"
            app:textColorSelected="@color/main" />

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"

            app:paddingTexwithIcon="5dp"
            app:tabIconNormal="@mipmap/message"
            app:tabIconSelected="@mipmap/message_select"
            app:tabText="通讯"
            app:tabTextSize="12sp"
            app:textColorNormal="@color/textGray"
            app:textColorSelected="@color/main" />

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"

            app:paddingTexwithIcon="5dp"
            app:tabIconNormal="@mipmap/square"
            app:tabIconSelected="@mipmap/square_select"
            app:tabText="广场"
            app:tabTextSize="12sp"
            app:textColorNormal="@color/textGray"
            app:textColorSelected="@color/main" />

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"

            app:paddingTexwithIcon="5dp"
            app:tabIconNormal="@mipmap/my"
            app:tabIconSelected="@mipmap/my_select"
            app:tabText="我的"
            app:tabTextSize="12sp"
            app:textColorNormal="@color/textGray"
            app:textColorSelected="@color/main" />
    </com.yinglan.alphatabs.AlphaTabsIndicator>

    <com.topunion.chili.wight.NoScrollViewPager
        android:id="@+id/mViewPager"
        android:layout_above="@id/alphaIndicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        />
</RelativeLayout>
