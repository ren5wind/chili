<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@android:color/transparent"
                android:layout_width="240dp"
                android:layout_height="200dp">

    <ImageButton
        android:id="@+id/btn_close"
        android:src="@mipmap/group_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:scaleType="center"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/txt_alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edit_alert"
        android:layout_width="160dp"
        android:hint="请输入群名称"
        android:textSize="14sp"
        android:textColorHint="@color/textGray"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="200dp"
        android:layout_height="1px"
        android:background="#999999"
        android:layout_below="@+id/edit_alert"
        android:layout_alignLeft="@+id/edit_alert"
        android:layout_alignRight="@+id/edit_alert"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#999999"
        android:layout_alignTop="@+id/layout_btns"
        />

    <LinearLayout
        android:id="@+id/layout_btns"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_cancel"
            android:background="@android:color/transparent"
            android:textSize="14sp"
            android:text="取消"
            android:textColor="@color/textGray"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"/>

        <View
            android:background="#f2f2f2"
            android:layout_width="1px"
            android:layout_height="30dp"/>

        <Button
            android:id="@+id/btn_confirm"
            android:background="@drawable/dialog_right_btn_bg"
            android:textSize="14sp"
            android:text="确定"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"/>

    </LinearLayout>
</RelativeLayout>
